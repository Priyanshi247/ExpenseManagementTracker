@model ExpenseCategoryEntity

@{
    ViewData["title"] = "Delete Expense Category";
}

<form method="post" asp-action="Delete">
    @*  //if we dont add this id input hidden field then that particular row will not affected *@
    <input asp-for="ExpenseCategoryId" hidden />

    <div class="border p-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-checkbtn-group row">
            <h2 class="text-black-50 pl-3">Delete Expense Category</h2>
        </div>
        <br />

        <div class="row">
            <div class="col-4">
                <label asp-for="ExpenseCategoryName"></label>
                <input asp-for="ExpenseCategoryName" class="form-control datetimepicker" disabled />
                 </div>
        </div>
        <br />



        <div class="w-12 btn-group" role="group">
            <input type="submit" class="btn btn-primary mx-1" value="Delete?" />
            <a asp-action="Index" class="btn btn-danger mx-1">Back</a>
        </div>


    </div>
</form>




